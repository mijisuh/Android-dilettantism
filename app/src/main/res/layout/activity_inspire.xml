<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        app:srcCompat="@mipmap/search_perfdisp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCulart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/area"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btnCulart2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/realm"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30sp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            app:srcCompat="@mipmap/search_culartplace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCulartPlace5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/myloc"
                android:onClick="onClick" />

            <Button
                android:id="@+id/btnCulartPlace1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/perform"
                android:onClick="onClick" />

            <Button
                android:id="@+id/btnCulartPlace2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/display"
                android:onClick="onClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCulartPlace3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/library"
                android:onClick="onClick" />

            <Button
                android:id="@+id/btnCulartPlace4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/museum"
                android:onClick="onClick" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>